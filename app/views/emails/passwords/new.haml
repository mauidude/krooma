-content_for(:title) do
  Forgot Password

.row-fluid
  .span4.offset4
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "well" }) do |f|
      = f.error_notification
      = f.input :email, :required => true

      .form-actions= f.button :submit, "Send me reset password instructions", :class => "btn btn-primary btn-large"

.row-fluid
  .span4.offset4
    =render "emails/shared/links"
