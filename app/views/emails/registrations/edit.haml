=content_for(:title) do
  My Account

.row
  .span6.offset3
    =simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "well" }) do |f|
      = f.error_notification

      .control-group= f.input :email, :required => true, :autofocus => true
      .control-group= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false
      .control-group= f.input :password_confirmation, :required => false
      .control-group= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true

      .form-actions= f.button :submit, "Update", :class => "btn btn-primary btn-large"

%h3 Cancel My Account
%p
  Unhappy?
  = link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete
