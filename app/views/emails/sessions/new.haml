=content_for(:title) do
  Login

.row
  .span6.offset3
    =simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "well"}) do |f|
      .control-group= f.input :email, :required => false, :autofocus => true
      .control-group= f.input :password, :required => false
      .control-group= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

      .form-actions= f.button :submit, "Log in", :class => "btn btn-primary btn-large"

.row
  .span6.offset3
    =render "emails/shared/links"
