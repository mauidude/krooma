-content_for :content do
  .row
    .span2
      %a.brand{:href => root_path}
        %img{:src => asset_path("krooma.png"), :alt => "Krooma" }
    .span10
      =render :partial => "shared/search"

  -if content_for?(:title)
    .page-header
      %h1= yield(:title)

  -if a = alert
    .alert.alert-error= a

  .container
    .row
      .span10
        =yield
      .span2
        .sidebar-nav
          =content_for?(:sidebar)? yield(:sidebar) : render("shared/ad")

=render :file => "layouts/base"
