!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : "Krooma"
    =csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js", :type => "text/javascript" }

    =stylesheet_link_tag "application", :media => "all"
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
    -if !@meta_robots.empty?
      %meta{:name => "robots", :content => @meta_robots.join(',')}

  %body
    .container
      #header.navbar
        .navbar-inner
          %ul.nav.pull-left
            %li= link_to "Find Cars", root_path
            %li= link_to "Sell Your Car"
          %ul.nav.pull-right
            %li= link_to "Register"
    .container
      =content_for?(:content) ? yield(:content) : yield
    .container
      %footer
        .navbar
          .navbar-inner
            .container
              %a.btn.btn-navbar{:data => {:target => ".nav-collapse", :toggle => "collapse"}}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
            .container.nav-collapse
              %ul.nav
                %li= link_to "Cars By Make", makes_path
                %li= link_to "About", "/path2"
    =javascript_include_tag "application"
    =yield(:scripts) if content_for?(:scripts)